= link_to  service_homepage_path(service), class: "service-item" do
  - if service.service_wallpaper.attached?
    = image_tag service.service_wallpaper, class: "service_view"
  - else
    .service_view = t('no_image')
  .service-content
    .service-name
      label
      span = service.name
    .service-price
      label
      span = "$#{service.price}"
    .service-execution-time
      label
      span = "#{service.execution_time} minutes"
